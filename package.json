{
    "name": "tasks",
    "version": "0.1.0",
    "description": "Simple task editor app",
    "author": "villevpe",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/villevpe/tasks.git"
    },
    "licence": "MIT",
    "dependencies": {
        "classnames": "2.2.5",
        "compression": "1.7.1",
        "debounce": "1.1.0",
        "express": "4.16.2",
        "react": "16.2.0",
        "react-dom": "16.2.0",
        "react-hot-loader": "3.1.3",
        "react-redux": "5.0.6",
        "redux": "3.7.2",
        "redux-actions": "2.2.1",
        "typescript": "2.6.2",
        "uuid": "3.2.1"
    },
    "devDependencies": {
        "@types/classnames": "2.2.3",
        "@types/debounce": "1.0.0",
        "@types/enzyme": "3.1.6",
        "@types/enzyme-adapter-react-16": "1.0.1",
        "@types/jasmine": "2.8.4",
        "@types/jest": "22.0.1",
        "@types/node": "9.3.0",
        "@types/react": "16.0.34",
        "@types/react-dom": "16.0.3",
        "@types/react-redux": "5.0.14",
        "@types/redux-actions": "2.2.3",
        "@types/redux-mock-store": "0.0.13",
        "@types/uuid": "3.4.3",
        "css-hot-loader": "1.3.5",
        "css-loader": "0.28.9",
        "enzyme": "3.3.0",
        "enzyme-adapter-react-16": "1.1.1",
        "extract-text-webpack-plugin": "3.0.2",
        "file-loader": "1.1.6",
        "identity-obj-proxy": "3.0.0",
        "is-uuid": "1.0.2",
        "jest": "22.1.2",
        "jest-localstorage-mock": "2.2.0",
        "node-sass": "4.7.2",
        "postcss-loader": "2.0.10",
        "pre-commit": "1.2.2",
        "redux-mock-store": "1.4.0",
        "sass-loader": "6.0.6",
        "style-loader": "0.19.1",
        "ts-jest": "22.0.1",
        "ts-loader": "3.2.0",
        "tslint": "5.9.1",
        "tslint-loader": "3.5.3",
        "tslint-react": "3.4.0",
        "webpack": "3.10.0",
        "webpack-dev-server": "2.11.0"
    },
    "scripts": {
        "dev": "webpack-dev-server --history-api-fallback --content-base ./src --open --hot",
        "build:dev": "webpack --progress --color --display-error-details",
        "build": "webpack -p --config webpack.config.prod.js --progress",
        "lint": "tslint -p ./tsconfig.json",
        "heroku-postbuild": "npm run build",
        "start": "npm run build && node ./server/index.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch --coverage",
        "test:watch:all": "jest --watchAll --coverage"
    },
    "pre-commit": [
        "lint",
        "test"
    ],
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleNameMapper": {
            "\\.(css|scss)$": "identity-obj-proxy"
        },
        "transform": {
            "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "/src/.*\\.spec.(ts|tsx|js)$",
        "setupTestFrameworkScriptFile": "<rootDir>/src/initTests.js",
        "setupFiles": [
            "jest-localstorage-mock"
        ]
    }
}
