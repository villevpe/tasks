{
    "name": "tasks",
    "version": "0.1.0",
    "description": "Simple task editor app",
    "author": "villevpe",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/villevpe/tasks.git"
    },
    "licence": "MIT",
    "dependencies": {
        "classnames": "2.2.5",
        "compression": "1.7.1",
        "debounce": "1.0.2",
        "express": "4.16.2",
        "react": "16.0.0",
        "react-dom": "16.0.0",
        "react-hot-loader": "3.1.1",
        "react-redux": "5.0.6",
        "redux": "3.7.2",
        "redux-actions": "2.2.1",
        "typescript": "2.5.3",
        "uuid": "3.1.0"
    },
    "devDependencies": {
        "@types/classnames": "2.2.3",
        "@types/debounce": "1.0.0",
        "@types/jasmine": "2.6.0",
        "@types/jest": "21.1.4",
        "@types/node": "8.0.46",
        "@types/react": "16.0.16",
        "@types/react-dom": "16.0.2",
        "@types/react-redux": "5.0.10",
        "@types/redux-actions": "2.2.2",
        "@types/uuid": "3.4.3",
        "css-hot-loader": "1.3.2",
        "css-loader": "0.28.7",
        "enzyme": "3.1.0",
        "extract-text-webpack-plugin": "3.0.1",
        "file-loader": "1.1.5",
        "is-uuid": "1.0.2",
        "jest": "21.2.1",
        "node-sass": "4.5.3",
        "postcss-loader": "2.0.8",
        "pre-commit": "^1.2.2",
        "sass-loader": "6.0.6",
        "style-loader": "0.19.0",
        "ts-jest": "21.1.3",
        "ts-loader": "3.0.5",
        "tslint": "5.8.0",
        "tslint-loader": "3.5.3",
        "tslint-react": "3.2.0",
        "webpack": "3.8.1",
        "webpack-dev-server": "2.9.3"
    },
    "scripts": {
        "dev": "webpack-dev-server --history-api-fallback --content-base ./src --open --hot",
        "build:dev": "webpack --progress --color --display-error-details",
        "build": "webpack -p --config webpack.config.prod.js --progress",
        "lint": "tslint -p ./tsconfig.json",
        "heroku-postbuild": "npm run build",
        "start": "node ./server/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:watch:all": "jest --watchAll"
    },
    "pre-commit": [
        "lint",
        "test"
    ],
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "/src/.*\\.spec.(ts|tsx|js)$"
    }
}
